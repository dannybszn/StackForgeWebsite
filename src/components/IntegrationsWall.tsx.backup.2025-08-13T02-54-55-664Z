          const Icon = integration.icon
          return (
            <li key={integration.name} className="flex">
              <button
                type="button"
                tabIndex={0}
                aria-label={integration.ariaLabel}
                className={classNames(
                  'group w-full flex flex-col items-center justify-center p-4 md:p-6 gap-2',
